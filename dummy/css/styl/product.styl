/*! PRODUCT PAGE */
.s-product-page

    .s-product-photos
        margin 1em 0 0

        .s-photo-main
            $_image_height = 430px

            a
                display block
                height $_image_height
                line-height $_image_height
                text-align center
                border-radius 2px
                overflow hidden
                $shadow()

                img
                    display inline-block
                    vertical-align middle
                    max-width 100%
                    max-height $_image_height
                    line-height inherit

        .s-photos-list
            margin 1em 0

            .s-photo-thumb
                display inline-block
                vertical-align top
                margin 0 1em 1em 0

                a
                    display inline-block
                    vertical-align top
                    line-height 0
                    padding 2px
                    border-radius 2px
                    overflow hidden

                    img
                        border-radius 2px
                        overflow hidden
                        $shadow()

                    &.is-selected
                        padding 0
                        border 2px solid #e85034


    .s-cart-wrapper
        margin: 1em 0 0

    .s-product-info
        .s-tabs-wrapper
            margin: 1.5em 0 0
            border: solid rgba(0,0,0,0.1);
            border-width 0 0 1px 0;
            white-space: nowrap;

            .s-tab-item
                position relative
                top: 1px

                display inline-block
                vertical-align top
                padding: 0.5em 1em
                margin-left 0.5em

                border: 1px solid rgba(0,0,0,0.1)
                border-bottom-color transparent
                border-radius 2px 2px 0 0

                text-decoration: none;

                &:first-child
                    margin-left 0

                &.is-active
                    border-bottom-color: #fff

        .s-tabs-content
            .s-tab-content
                margin: 1em 0 0;
                display none

                &.is-shown
                    display block

                .s-product-overview
                    a
                        display inline-block
                        color #369

                    .s-product-desc
                    .s-product-categories
                    .s-tags-wrapper
                        margin 1em 0

                        &:first-child
                            margin-top 0

                    .s-tags-wrapper
                        a
                            display inline-block
                            vertical-align baseline
                            margin 0 0 0 4px
                            padding .25em .5em
                            background #369
                            color #fff
                            border-radius 2px

                .s-features-wrapper
                    tr
                        &:first-child
                            td
                                border-top: 0

                        td
                            border solid rgba(0,0,0,0.05)
                            border-width 1px 0 0
                            padding: 0.75em

                .s-product-reviews

                    .s-review-item
                        margin: 2em 0 0.5em

                    .s-rating-distribution
                        width: 100%;
                        box-sizing border-box

                        td
                            background transparent
                            border: 0;
                            vertical-align middle

                            padding: 0.3em

                        .column-1
                            width: 5%

                        .column-3
                            width: 20%

                        .bar
                            background: #eee;

                            .filling
                                background: #000;
                                height: 0.8em;

                    .s-buttons-wrapper
                        margin: 2em 0 0

                        .s-button
                            margin 0 0 0 1em

                            &:first-child
                                margin-left 0

    .s-related-products
        margin 2em 0 0
        border-top 1px solid rgba(0,0,0,.1)
        padding 2em 0 0

        .s-related-header
            margin 0

        .s-products-wrapper
            margin 0

.s-product-cart

    .skus
        margin: 1em 0 0
        border-top: 1px solid rgba(0,0,0,0.1)
        padding: 1em 0 0

        .skus-item
            margin: 0.5em 0 0

            &:first-child
                margin-top: 0

            span
                margin 0 0 0 .25em

                &:first-child
                    margin-left 0

            .price
                font-weight bold
                color: #c03

            .hint
                font-size: 0.8666em
                color: #aaa

    .s-options-wrapper
        margin 1em 0 0
        border-top: 1px solid rgba(0,0,0,0.1)

        .inline-select
            margin: .5em 0 0
            padding: 0

            &:first-child
                margin-top 0

            a
                display inline-block
                vertical-align middle
                min-width: 2.5em
                padding: 0.75em
                margin: 0.5em 0.5em 0 0 !important
                box-sizing border-box
                text-align center
                border-radius 2px
                text-decoration: none
                overflow hidden
                $shadow()

                i
                    display none

                &:not(.selected)
                    color #121212 !important
                    background-color: #fff !important

                &.selected
                    border none
                    color #fff
                    background #369

    .s-stocks-wrapper
        margin: 0.5em 0
        border-top: 1px solid rgba(0,0,0,0.1)
        padding: 1em 0 .25em

        .stock-high
            color: #0a0

        .stock-low
            color: #a80

        .stock-critical
            color: #e00

        .stock-none
            color: #aaa

    .purchase
        margin: 1em 0 0

        .service-list-wrapper
            margin: 1em 0 0
            padding: 1em 0
            border: solid rgba(0,0,0,0.1)
            border-width 1px 0

            .service-item
                margin: 0.5em 0 0

                &:first-child
                    margin-top: 0

        .add2cart
            position relative
            margin: 0.5em 0 0

            .add-form-wrapper
                padding: 1em 0 0

                .quantity-wrapper
                    float: left;

                    background transparent
                    display inline-block;
                    white-space nowrap

                    input[type="text"]
                        width: 3em
                        margin 0 .5em
                        text-align center

                    .volume-buttons
                        display inline-block
                        vertical-align top

                        input[type="button"]
                            width 2.6em

                .price-wrapper
                    float: right
                    text-align right
                    line-height 2.5em
                    white-space nowrap
                    overflow hidden

                    .price
                        margin: 0.5em 0
                        font-size: 1.5em
                        color: #c03

                    .compare-at-price
                        margin 0 .5em 0 0
                        text-decoration line-through
                        color: #c99

                .submit-wrapper
                    clear: both
                    padding: 1em 0 0

            .added2cart
                margin: 1em 0 0
                padding: 0.5em
                background #b8f9c8

                border-radius 2px
                overflow hidden
                $shadow()

                .button-block
                    margin: 1em 0 0