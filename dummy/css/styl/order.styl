.s-orders-wrapper
    .s-orders-header
        margin 0

    .s-orders-list

        .s-order-item
            margin: 1em 0 0
            background rgba(250,250,250,0.1)
            border-radius 2px
            overflow hidden
            $shadow()

            &:first-child
                margin-top: 0

            .s-order-header
                display table
                width 100%
                padding: 0.75em
                background: rgba(0,0,0,0.1);
                text-decoration none
                color: #fff
                box-sizing border-box

                .left-column
                .right-column
                    display table-cell
                    vertical-align middle

                .right-column
                    text-align right

            .s-order-details
                padding: 0.75em

                .s-order-list
                    .goods-list
                        margin 1em 0 0
                        font-size: 0.9em

                        li
                            margin 1em 0 0 1em

                            &:first-child
                                margin-top 0

                .s-order-shipping
                    margin 1em 0 0

                .s-order-payment
                    margin 1em 0 0

                .label
                    font-size: 0.85em
                    color: #888

.s-order-wrapper
    margin: 0;

    .s-order-header
        margin: 0
        padding: 0 0.25em
        color: #fff
        border-radius 2px

    .s-contacts-wrapper
        .s-contact-wrapper
            display inline-block
            width 45%
            margin 0 0 0 1em

            &:first-child
                margin-left 0

            .s-contact-header
                margin 0

            .s-contact-block
                display inline-block
                margin 1em 0 0
                padding 1em
                border-radius 2px
                $shadow()

                .s-userpic
                    display inline-block
                    border-radius 50%
                    vertical-align middle

                .s-user-name
                    margin 0 0 0 .5em
                    line-height 1.5em
                    font-weight bold

                .s-address-wrapper
                    margin .5em 0 0
                    line-height 1.25em

    .s-plugin-wrapper
    .s-comment-wrapper
        padding 1em
        border-radius 2px
        $shadow()

    .s-list-wrapper
        margin 2em 0 0
        padding 1em
        border-radius 2px
        overflow hidden
        $shadow()

        .s-order-list
            tr
                &.service
                    td
                        border-top 0

                th
                    text-align right
                    border-top 0
                    padding-top 0

                td
                    padding: .5em
                    text-align right
                    border solid rgba(0,0,0,.05)
                    border-width 1px 0 0

                    &:first-child
                        text-align left
                        width: 50%

                &.total-sum
                    td
                        font-weight bold
                        font-size: 1.1em